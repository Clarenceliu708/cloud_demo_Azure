<!DOCTYPE html>
<html>
<head>
  <title>搜索笔记</title>
  <style>
    body {
      margin: 0;
      height: 100vh;
      display: flex;
      justify-content: center;   
      align-items: center;      
      font-family: Arial, sans-serif;
      background-image: url('/image/1.jpg'); 
      background-size: cover;
      background-position: center;
      transition: background-image 0.5s ease-in-out; 
    }

    body.fade {
      animation: fadeEffect 0.8s ease-in-out;
    }

    @keyframes fadeEffect {
      0% { opacity: 0.3; }
      100% { opacity: 1; }
    }

    .search-container {
      text-align: center;
      background: rgba(255, 255, 255, 0.8); 
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.2);
      width: 400px;
    }
    input[type="text"] {
      padding: 10px;
      width: 250px;
      margin-right: 10px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }
    button {
      padding: 10px 20px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
    button:hover {
      background-color: #0056b3;
    }
    ul {
      margin-top: 20px;
      text-align: left;
    }
    li {
      background: #f9f9f9;
      margin-bottom: 8px;
      padding: 8px;
      border-radius: 4px;
    }
  </style>
</head>
<body>
  <div class="search-container">
    <h1>Search notes</h1>
    <form action="/search" method="get">
  <input type="text" name="subjectCode" placeholder="Enter subject code">
  <button type="submit">Search</button>
</form>
    <ul id="results"></ul>
  </div>

  <script>
    const input = document.getElementById('subjectCode');
    const form = document.getElementById('searchForm');
    const results = document.getElementById('results');

    // 背景切换效果
    input.addEventListener('input', function() {
      if (this.value.trim() !== "") {
        document.body.classList.add('fade');
        document.body.style.backgroundImage = "url('/image/2.jpg')";
      } else {
        document.body.classList.add('fade');
        document.body.style.backgroundImage = "url('/image/1.jpg')";
      }
      document.body.addEventListener('animationend', () => {
        document.body.classList.remove('fade');
      }, { once: true });
    });

    // 改成调用 REST API
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const subjectCode = input.value.trim();
      if (!subjectCode) return;

      try {
        const res = await fetch(`/api/files?subjectCode=${subjectCode}`);
        const data = await res.json();

        results.innerHTML = '';
        if (data.length === 0) {
          results.innerHTML = '<li>No notes found</li>';
        } else {
          data.forEach(note => {
            const li = document.createElement('li');
            li.textContent = `${note.filename} - ${note.description || ''}`;
            results.appendChild(li);
          });
        }
      } catch (err) {
        results.innerHTML = `<li>Error: ${err.message}</li>`;
      }
    });
  </script>
  

</body>
